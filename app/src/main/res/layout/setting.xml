<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/light_blue"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton"

            android:background="@drawable/backicon"
            android:onClick="back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/nb_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:text="SETTING"

            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold"
            android:layout_weight="1.10"
            android:gravity="center|start"
            android:paddingLeft="10dp" />



    </LinearLayout>


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Select/Deselect Apps"
        android:id="@+id/selectDeselect"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="99dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/appLimit"
        android:layout_alignStart="@+id/appLimit" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Choose App Limit Option"
        android:id="@+id/appLimit"

        android:layout_marginTop="39dp"
        android:layout_below="@+id/selectDeselect"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="About App Monitor"
        android:id="@+id/about"

        android:layout_marginTop="39dp"
        android:layout_below="@+id/appLimit"
        android:layout_alignLeft="@+id/appLimit"
        android:layout_alignStart="@+id/appLimit" />


</RelativeLayout>